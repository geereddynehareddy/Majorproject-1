<%layout("/layout/boilerplate.ejs")%>
<div class="row">
  <div class="col-8 offset-2" >
    <br><br>
   
  <h1>Create a New Listing</h1>
   <form method="POST" action="/listings/new" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="mb-3">
<lable for="title" class="form-label">Title</lable>
  <input name="listings[title]" placeholder="enter title" type="text" class="form-control" required/>
  <div class="valid-feedback">Title looks good</div>
 </div>

 <div class="mb-3">
<lable for="description" class="form-label">Description</lable>
  <textarea name="listings[description]" placeholder="enter description" class="form-control" required></textarea>
   <div class="invalid-feedback">Enter a valid Description</div> 
</div>
 
<!-- <div class="mb-3">
  <lable for="description" class="form-label">Image URL</lable>
  <input name="listings[image]" placeholder="enter image URL/Link" type="text" class="form-control"/> 
 
</div> -->
<div class="mb-3">
  <lable for="description" class="form-label">Upload Image</lable>
  <input name="listings[image]" placeholder="Image" type="file" class="form-control"/> 
 
</div>
 <div class="row">
<div class="mb-3 col-md-4">
  <lable for="description" class="form-label">Price</lable>
  <input name="listings[price]" placeholder="enter price" type="number" class="form-control" required/>
<div class="invalid-feedback">Enter a valid price</div> 
</div>
 <div class="mb-3">
  <label for="category" class="form-label">Category</label>

  <select
    name="listings[category]"
    id="category"
    class="form-select"
    required
  >
    <option value="" disabled selected>Select a category</option>

    <option value="beach">Beach</option>
    <option value="mountains">Mountains</option>
    <option value="city">City</option>
    <option value="farms">Farms</option>
    <option value="camping">Camping</option>
    <option value="pools">Amazing Pools</option>
    <option value="treehouses">Treehouses</option>
    <option value="islands">Islands</option>
    <option value="arctic">Arctic</option>
    <option value="boats">Boats</option>
    <option value="domes">Domes</option>
  </select>

  


<div class="mb-3 col-md-8">
  <lable for="description" class="form-label">Country</lable>
  <input name="listings[country]" placeholder="enter country" type="text" class="form-control" required />
  <div class="invalid-feedback">Enter a valid country</div> 
  </div>
 </div>
<div class="mb-3">
   <lable for="description" class="form-label">Location</lable>
  <input name="listings[location]" placeholder="enter location" type="text" class="form-control" required/>
  <div class="invalid-feedback">Enter a valid location</div> 
  </div>

  <button class="btn btn-dark add-btn">Add</button>
  <br><br>
</form>
</div>
</div>
