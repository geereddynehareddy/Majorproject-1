<%layout("/layout/boilerplate.ejs")%>
<h1 class="col-6 offset-3">SignUp on airbnb</h1>
<div class="row mt-3">
  <div class="col-6 offset-3" >
    <form action="/signup" method="POST" class="needs-validation" novalidate> 
 <div class="mb-3">
<label for="user" class="form-label">Username</label>

  <input name="username" id="user" placeholder="enter your username" type="text" class="form-control" required/>
  <div class="valid-feedback"></div>
 </div>
 <div class="mb-3">
<label for="email" class="form-label">Email</label>

  <input name="email" id="email" placeholder="enter your email-id" type="email" class="form-control" required/>

 </div>
  <div class="mb-3">
<label for="password" class="form-label">Password</label>

  <input name="password" id="password" placeholder="enter password" type="password" class="form-control" required/>

 </div>


<button class="btn btn-dark add-btn" type="submit">SignUp</button>
</div>
    </form>
    </div>
    </div>